<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
       <h2>Validation de mon Email </h2>

          <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
            <%= render 'shared/devise_errors' %>

      <div class="form-group">
          <p> Saisissez l'adresse Email associée à votre compte. Nous vous enverrons un lien de confirmation par Email pour valider votre compte</p>
            <%= f.email_field :email, autofocus: true, class:"form-control", placeholder "Email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </div>

      <div class="actions">
          <%= f.submit "Renvoyer un Email de confirmation", class:"btn btn-primary" %>
      </div>
<% end %>

    
  </div>
</div>
